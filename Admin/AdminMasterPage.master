    <div id="myalert_admin"></div>
    <!-- Modal -->
    <div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Системное сообщение</h5>
                    <button type="button" id="modal_close" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button id="btn_alertOk" type="button" class="btn btn-primary" style="min-width: 75px;">OK</button>
                </div>
            </div>
        </div>
    </div>

    <button type="button" id="alertButton" data-toggle="modal" data-target="#alertModal" class="fade"></button>
    <script>
        function Myalert(message, type, time, url) {
            let alertContainer = $("#myalert_admin");

            let wrapper = document.createElement('div')
            wrapper.innerHTML =
                `<div class="alert alert-${type} d-flex align-items-center" role="alert" id="alert" style="margin-top: 3px;display:none;justify-content: space-between; width:99%; margin-left:3px">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:">
                    <use xlink:href="#${type}-fill" />
                </svg>
                <div class="flex-column" style="justify-content: space-between;">
                    <span id="alert_text">${message}</span>
                </div>
                <button type="button" id="btn_alert_close" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>`;
            alertContainer.append(wrapper);

            if (type == "warning") {
                setTimeout(function () {
                    $("#myalert_admin").html('');
                }, time * 15000);
            }
            else {
                setTimeout(function () {
                    $("#myalert_admin").html('');
                    if (url != '') {
                        location.href = url;
                    }
                }, time * 3000);
            }
        }
    </script>
