    <script type="text/javascript">
        $(document).ready(function () {
            $(".auto_num").each(function (i, obj) {
                $(obj).attr("placeholder", "Пример: A 123 AA 999");
            });

            $(".phone_num").each(function (i, obj) {
                $(obj).attr("placeholder", "Пример: +79044562578");
            });

            $(".email_text").each(function (i, obj) {
                $(obj).attr("placeholder", "Пример: mail@domain.zone");
            });

            let text = $('#ddlUserSearchTypes').val();
            if (text == "0") {
                $('#txtSearch').attr("placeholder", "Например: Василий Петров");
            }
            else if (text == "1") {
                $('#txtSearch').attr("placeholder", "Например: T234EP99");
            }
            else {
                $('#txtSearch').attr("placeholder", "Например: 400");
            }

            $('#dop_auto').change(function () {
                let check = this.checked;
                $(".trAdv").each(function (i, obj) {
                    $(obj).toggle(check);
                });
            });

            let num = $('#tbxAutoNumberAdv').val();

            if (num) {
                if (num.length > 0) {
                    $('#dop_auto').prop('checked', true);
                    $(".trAdv").each(function (i, obj) {
                        $(obj).toggle(true);
                    });
                }
            }

            showMessages(false);

            $('#btnNewMessages').click(function () {
                showMessages(false);
            });

            $('#btnReadMessages').click(function () {
                showMessages(true);
            });

        });

        function showMessages(isRead) {
            if (!isRead) {
                $('.table-read').hide();
                $('.table-bold').show();
            } else {
                $('.table-read').show();
                $('.table-bold').hide();
            }
        }

        function deleteMess(sender) {
            $('#btnDelMess_ok').click(function () {
                var btn = $(sender).parent().parent().find('.btnDeleteMessage');
                $(btn).click();
            });
        }

        function answerMess(messageBody,messageID, userKey, sender) {
            var txtAns = $('#modalAnswer').find('#txtAnswer');
            var title = $('#modalAnswer').find('.modal-prebody');


            $(title).html('Текст сообщения: ' + messageBody);

            $('#btnSendAns').click(function () {
                $.post("/admin/answer",
                    {
                        userKey: userKey,
                        messageID: messageID,
                        answer: $(txtAns).val()
                    })
                    .done(function (result, status, xhr) {
                        if (result == 'success')
                            location.href = '/admin/messages'
                        else
                            alert(result);
                    })
            });
        }

        function changeBarrier(barrier, sender) {
            var body_modal = $('#modalBarrier').find('.modal-body');

            if (barrier == 1) {
                $(body_modal).html('Вы действительно хотите РАЗБЛОКИРОВАТЬ шлагбаум этому пользователю?');
            }
            else {
                $(body_modal).html('Вы действительно хотите ЗАБЛОКИРОВАТЬ шлагбаум этому пользователю?');
            }

            $('#btn_ok').click(function () {
                var btn = $(sender).parent().parent().find('.btnChange');
                $(btn).click();
            });
        }

        function changeBan(granted, sender) {
            var body_modal = $('#modalBan').find('.modal-body');

            if (granted == 0) {
                $(body_modal).html('Вы действительно хотите РАЗРЕШИТЬ вход в систему для этого пользователя?');
            }
            else {
                $(body_modal).html('Вы действительно хотите ЗАПРЕТИТЬ вход в систему для этого пользователя?');
            }

            $('#btnBan_ok').click(function () {
                var btn = $(sender).parent().parent().find('.btnChangeBan');
                $(btn).click();
            });
        }

        function alertMsg(message, type, href) {
            var body_modal = $('#alertModal').find('.modal-body');
            var header = $('#alertModal').find('.modal-header');

            $(header).addClass("modal-header-" + type);

            if (type == "warning") {
                $(body_modal).html(`<i class="fa-solid fa-triangle-exclamation" style="color: #d50707;"></i> ${message}`);
                setTimeout(function () {
                    $("#modal_close").click();
                }, 15000);
            }
            else {
                $(body_modal).html(`<i class="fa-solid fa-circle-info"></i> ${message}`);
            }

            $('#btn_alertOk').click(function () {
                if (href != '') {
                    location.href = href;
                }
                else {
                    $("#modal_close").click();
                }
            });

            $("#alertButton").click();
        }

        function delUser(sender) {
            $('#btnDel_ok').click(function () {
                var btn = $(sender).parent().parent().find('.btnDel');
                $(btn).click();
            });
        }

        $('#ddlUserSearchTypes').change(function () {
            let text = this.value;
            if (text == "0") {
                $('#txtSearch').attr("placeholder", "Например: Василий Петров");
            }
            else if (text == "1") {
                $('#txtSearch').attr("placeholder", "Например: T234EP99");
            }
            else {
                $('#txtSearch').attr("placeholder", "Например: 400");
            }
        });


        $('#tbxAutoNumberAdv').on('input change paste', function () {
            var text = $(this).val();
            if (text.length > 0)
                if (text.match(/[a-zA-Z]+/)) {
                    alertMsg('Поле должно содержать русские буквы и цифры', "warning", '');
                    $(this).val('');
            }
        });

        $('#tbxAutoNumber').on('input change paste', function () {
            var text = $(this).val();
            if (text.length > 0)
                if (text.match(/[a-zA-Z]+/)) {
                    alertMsg('Поле должно содержать русские буквы и цифры', "warning", '');
                    $(this).val('');
            }
        });
    </script>
